{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "target": "es6",
    "incremental": true,
    "outDir": "target",
    "baseUrl": ".",
    "rootDirs": [
      "./src",
      "../common/src"
    ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "importHelpers": false
  },
  "include": [
    "./src/**/*",
    "../common/src/**/*"
  ]
}
