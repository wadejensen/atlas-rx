{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "target": "es6",
    "incremental": true,
    "outDir": "build",
    "baseUrl": ".",
    "rootDirs": [
      "./src/ts"
    ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "importHelpers": false
  },
  "include": [
    "src/**/*"
  ]
}
